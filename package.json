{
  "name": "ect-technis",
  "version": "1.1.0",
  "description": "Excel Comparison Tool - ECT Technis",
  "main": "src/electron/main.js",
  "homepage": "./",
  "author": "Alexandre Caby",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist build node_modules/.cache"
  },
  "build": {
    "appId": "com.alexandre.ect-technis",
    "productName": "ECT Technis",
    "copyright": "Â© 2025 Alexandre Caby",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "docs/**/*",
      "!src/**/*.pyc",
      "!src/**/__pycache__",
      "!**/.git",
      "!**/node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "src",
        "to": "app/src"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/frontend/images/icon_excel_comparison.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ECT Technis",
      "artifactName": "ECT_Technis_Setup_v${version}.exe"
    },
    "portable": {
      "artifactName": "ECT_Technis_Portable_v${version}.exe"
    }
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.6.7"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
